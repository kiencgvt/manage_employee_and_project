<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/project_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Projects</h3>
      <% if @projects.any? %>
        <ol class="microposts">
          <%= render @projects %>
        </ol>
        <%= will_paginate @projects %>
      <% end %>
    </div>
  </div>
<% else %>
  <h1>Management App</h1>
  <p>
    This is the home page for the management application.
  </p>
<% end %>